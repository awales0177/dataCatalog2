      "id": "retention_policy_001",
      "name": "Customer Data Retention Policy",
      "type": "retention",
      "description": "Defines how long customer data should be retained and when it should be archived or deleted",
      "status": "active",
      "priority": "high",
      "category": "data-governance",
      "owner": "Data Governance Team",
      "stakeholders": ["Legal", "Compliance", "IT Security"],
      "effectiveDate": "2024-01-01",
      "reviewDate": "2024-12-31",
      "version": "1.0.0",
      "retentionRules": [
        {
          "dataType": "customer_personal_info",
          "retentionPeriod": "7 years",
          "retentionUnit": "years",
          "retentionValue": 7,
          "action": "delete",
          "reason": "Legal compliance requirement"
        },
        {
          "dataType": "transaction_history",
          "retentionPeriod": "10 years",
          "retentionUnit": "years",
          "retentionValue": 10,
          "action": "archive",
          "reason": "Audit and regulatory requirements"
        }
      ],
      "exceptions": [
        "Data subject to legal hold",
        "Data involved in active investigations"
      ],
      "compliance": ["GDPR", "CCPA", "SOX"],
      "tags": ["retention", "compliance", "customer-data"],
      "lastUpdated": "2024-01-15 10:30:00"
    },
    {
      "id": "quality_policy_001",
      "name": "Data Quality Standards Policy",
      "type": "quality",
      "description": "Establishes standards for data accuracy, completeness, consistency, and timeliness across all data assets",
      "status": "active",
      "priority": "high",
      "category": "data-quality",
      "owner": "Data Quality Team",
      "stakeholders": ["Data Engineering", "Business Analysts", "Data Scientists"],
      "effectiveDate": "2024-01-01",
      "reviewDate": "2024-06-30",
      "version": "1.0.0",
      "qualityStandards": [
        {
          "dimension": "accuracy",
          "threshold": "95%",
          "measurement": "percentage",
          "description": "Data must be 95% accurate based on business rules"
        },
        {
          "dimension": "completeness",
          "threshold": "90%",
          "measurement": "percentage",
          "description": "Required fields must be 90% complete"
        },
        {
          "dimension": "consistency",
          "threshold": "98%",
          "measurement": "percentage",
          "description": "Data consistency across systems must be 98%"
        },
        {
          "dimension": "timeliness",
          "threshold": "24 hours",
          "measurement": "time",
          "description": "Data must be updated within 24 hours"
        }
      ],
      "monitoring": [
        "Automated quality checks",
        "Regular quality assessments",
        "Data profiling reports"
      ],
      "remediation": [
        "Data cleansing procedures",
        "Error correction workflows",
        "Quality improvement initiatives"
      ],
      "tags": ["quality", "standards", "monitoring"],
      "lastUpdated": "2024-01-15 10:30:00"
    },
